generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  citizen
}

model people {
  id                        String           @id @default(cuid())
  first_name                String
  middle_name               String?
  last_name                 String
  email                     String
  password                  String?
  phone                     String
  address_line              String
  city                      String
  state                     String
  pin_code                  Int
  dob                       DateTime
  photo                     String
  gender                    String
  pub_key                   String?
  verification_complete     Boolean          @default(false)
  registration_id           String           @unique
  registration_tx_signature String?
  role                      Role[]
  created_at                DateTime         @default(now())
  updated_at                DateTime         @updatedAt
  access_requests           access_request[]
}

model registrar {
  id         String   @id @default(cuid())
  name       String
  email      String
  password   String
  phone      String
  address    String
  pub_key    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum access_request_status {
  pending
  approved
  rejected
}

model access_request {
  id                String                @id @default(cuid())
  status            access_request_status @default(pending)
  created_at        DateTime              @default(now())
  requesting_entity String
  data_requested    Json // ans array of data fields 
  updated_at        DateTime              @updatedAt
  people            people                @relation(fields: [peopleId], references: [id])
  peopleId          String
}
